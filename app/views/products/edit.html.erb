<h1>Edit Product:</h1>

<%= form_tag "/products/#{@product_id}", method: :patch do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description %>
  </div>

<%= submit_tag "Edit Product" %>

<% end %>

<h3><%=link_to "Main Page", "/products"%>
