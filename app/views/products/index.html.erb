<div class="container">
  <div class="row">
    <div class="col-md-12 bgimage">
      <div class="bgimage-inside"></div>

  <h1>Dad Guy's Survival Supplies</h1>

  <h2>Check out these great   products:</h2>

  <div class="row">

    <% @products.each do |product|  %>

    <div class="col-md-4">

      <a href="/products/<%=product.id%>"><h3 class="text-center"><%= product.name %></h3>
      <img class="center-block img-responsive img-rounded" src="<%=  product.product_images.first.image_url if product.product_images.first.image_url != "" %>">
      <h4 class="text-center">Price:  <%= number_to_currency(product.price) %></h4></a>
      <h5 class="text-center"><%=link_to "Edit Product", "/products/#{product.id}/edit"%></h5>

    </div>

    <% end %>

  </div>

  <h5><%=link_to "Add New Product", "/products/new"%></h5>

</div>
</div>
</div>
